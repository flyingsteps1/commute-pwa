+            console.log("[PRINT] loaded", {
+              page: "PrintPage",
+              yyyyMm,
+              staffId: null,
+              targetUserId: "self",
+              count: rows.length,
+              sample: rows[0],
+            });
+          }
+        }
+      } catch (e: any) {
+        console.error(e);
+        if (!cancelled) setError(e?.message ?? "Failed to load data");
+      } finally {
+        if (!cancelled) setLoading(false);
+      }
